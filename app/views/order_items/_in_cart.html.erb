<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= link_to product.product_name, product_path(product) %></h4>
    </div>
    <div class="col-xs-4">

      <%= form_for order_item, remote: true do |f| %>
        <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency_rm order_item.unit_price %></span></h4>
        <div class="row">
          <div class="col-xs-4">
           Quantity: <%= f.select :quantity, 1 .. product.stock_count.to_i + order_item.quantity.to_i, class: "form-control" %>
           <%= f.hidden_field :product_id, value: product.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <%= f.submit "Update Quantity", class: "btn btn-primary" %>
              <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.product_name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right">Total Price: <span style="color: green"><%= number_to_currency_rm order_item.total_price %></span></h4>
      <% end %>
    </div>

  </div>
</div>